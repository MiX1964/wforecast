                                <td class="c3">{{ record[4] }}</td>
                                <td class="c1">{{ record[5] }}</td>
                                <td class="c2"></td>
                                <td class="c3">{{ record[6] }}%</td>
                                <td class="c2"><i class="wi wi-wind-beaufort-{{ record[7] }}"></i></td>
                                <td class="c2"><i class="wi wi-wind from-{{ record[8] }}-deg"></i></td>
                                <td class="c1">{{ record[9] }}</td>                                          
                            </tr>
                        {% endfor %}
                    </tbody>               
                </table> 
            </div>           
        </div>
    </body>
{% endblock %}